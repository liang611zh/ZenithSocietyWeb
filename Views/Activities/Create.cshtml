@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer _Localizer
@model ZenithWebSite.Models.Activity

@{
    ViewData["Title"] = _Localizer["Create"];
}

<h2>@ViewData["Title"]</h2>

<h4>@_Localizer["Activity"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActivityDescription" class="control-label">@_Localizer["Activity Description"]</label>
                <input asp-for="ActivityDescription" class="form-control" />
                <span asp-validation-for="ActivityDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value = "@_Localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
